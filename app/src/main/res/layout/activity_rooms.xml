<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rooms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.radiouser.gstavrinos.radio_user_app.RoomsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/guideme_es"
        android:textSize="40sp"
        android:id="@+id/title"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/back_es"
        android:textAllCaps="false"
        android:drawableTop="@drawable/back2"
        android:textSize="20sp"
        android:background="#00FFFFFF"
        android:padding="0sp"
        android:textColor="@drawable/button_text"
        android:id="@+id/back_button"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/back_button"
        android:layout_below="@+id/title"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:id="@+id/button_layout">


        </TableLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Please wait while the rooms are loading..."
        android:id="@+id/loading_txt"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="35dp"/>

</RelativeLayout>
