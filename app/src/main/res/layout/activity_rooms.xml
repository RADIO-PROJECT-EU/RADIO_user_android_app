<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rooms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.radiouser.gstavrinos.radio_user_app.RoomsActivity">

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="BACK TO HOME"
        android:drawableTop="@drawable/back2"
        android:textSize="14sp"
        android:background="#00FFFFFF"
        android:padding="0sp"
        android:textColor="@drawable/button_text"
        android:id="@+id/back_button"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="125dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_layout">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/myroom_button"
                android:textColor="@drawable/button_text"
                android:background="#00FFFFFF"
                android:padding="0sp"
                android:drawableTop="@drawable/my_room"
                android:textSize="14dp"
                android:layout_marginBottom="0sp"
                android:onClick="btnMsg"
                android:text="MY ROOM"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
                android:padding="0sp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="0sp"
                android:textColor="@drawable/button_text"
                android:onClick="btnMsg"
                android:layout_alignParentRight="true"
                android:id="@+id/kitchen_button"
                android:text="KITCHEN"
                android:textSize="14sp"
                android:drawableTop="@drawable/kitchen"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:padding="0sp"
                android:layout_marginBottom="0sp"
                android:background="#00FFFFFF"
                android:textColor="@drawable/button_text"
                android:onClick="btnMsg"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/myroom_button"
                android:id="@+id/common_area_button"
                android:drawableTop="@drawable/common_area2"
                android:textSize="14sp"
                android:text="COMMON AREA"/>


        </RelativeLayout>

    </ScrollView>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="ΠΑΡΑΚΑΛΩ ΠΕΡΙΜΕΝΕΤΕ ΟΣΟ ΦΟΡΤΩΝΟΥΝ ΤΑ ΔΩΜΑΤΙΑ..."
        android:id="@+id/loading_txt"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="35dp"/>-->

</RelativeLayout>
