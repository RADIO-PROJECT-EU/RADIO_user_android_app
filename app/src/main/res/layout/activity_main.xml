<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.radiouser.gstavrinos.radio_user_app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/mainmenu_en"
        android:textSize="40sp"
        android:id="@+id/title"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/back2"
        android:textSize="20sp"
        android:id="@+id/exit_button"
        android:background="#00FFFFFF"
        android:textColor="@drawable/button_text"
        android:text="@string/exit_en"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/exit_button"
            android:layout_below="@+id/title">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/t2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@id/t2"
                android:layout_above="@+id/t2"
                android:textSize="20sp"
                android:id="@+id/smart_home_button"
                android:padding="0sp"
                android:text="@string/smarthome_en"
                android:textColor="@drawable/button_text"
                android:background="#00FFFFFF"
                android:drawableTop="@drawable/smart_home"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_marginStart="25dp"
                android:layout_above="@+id/t2"
                android:layout_toEndOf="@id/t2"
                android:padding="0sp"
                android:id="@+id/facebook_button"
                android:background="#00FFFFFF"
                android:textColor="@drawable/button_text"
                android:drawableTop="@drawable/friends"
                android:text="@string/friends_en"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:padding="0sp"
                android:layout_toStartOf="@id/t2"
                android:layout_marginEnd="25dp"
                android:layout_below="@+id/t2"
                android:background="#00FFFFFF"
                android:textColor="@drawable/button_text"
                android:id="@+id/guide_me_button"
                android:drawableTop="@drawable/guide_me"
                android:layout_alignStart="@id/smart_home_button"
                android:text="@string/guideme_en"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="0sp"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@id/t2"
                android:textSize="20sp"
                android:layout_below="@+id/t2"
                android:background="#00FFFFFF"
                android:layout_alignEnd="@id/facebook_button"
                android:textColor="@drawable/button_text"
                android:id="@+id/helpme_button"
                android:onClick="helpMsg"
                android:drawableTop="@drawable/help"
                android:text="@string/help_en"/>

        </RelativeLayout>

    <!--<Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/settings"
        android:layout_marginRight="5dp"
        android:id="@+id/settings_button"
        android:layout_marginBottom="5dp"/>-->

</RelativeLayout>
